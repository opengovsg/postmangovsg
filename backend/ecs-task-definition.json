{
  "containerDefinitions": [
    {
      "name": "backend",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "APP_ENV",
          "value": "<ENVIRONMENT>"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "postman/ecs/backend",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "dd-agent",
      "image": "public.ecr.aws/datadog/agent:latest",
      "portMappings": [
        {
          "containerPort": 8126,
          "hostPort": 8126,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "TZ",
          "value": "Asia/Singapore"
        },
        {
          "name": "DD_APM_NON_LOCAL_TRAFFIC",
          "value": "true"
        },
        {
          "name": "ECS_FARGATE",
          "value": "true"
        },
        {
          "name": "DD_APM_ENABLED",
          "value": "true"
        },
        {
          "name": "DD_SITE",
          "value": "datadoghq.com"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "DD_API_KEY",
          "valueFrom": "/<ENVIRONMENT>/backend/DD_API_KEY"
        },
        {
          "name": "DD_SERVICE",
          "valueFrom": "/<ENVIRONMENT>/backend/DD_SERVICE"
        },
        {
          "name": "DD_TAGS",
          "valueFrom": "/<ENVIRONMENT>/backend/DD_TAGS"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "postman/ecs/dd-agent",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "family": "postman-backend",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX"
  },
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/postman-ecs-task-role",
  "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/postman-ecs-task-exec-role",
  "cpu": "1024",
  "memory": "8192"
}
