{
  "name": "backend",
  "version": "0.1.0",
  "description": "Backend / API server for Postman",
  "main": "build/server.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "dev": "tsc-watch --onSuccess \"node ./build/server.js\"",
    "lint": "eslint --ignore-path .gitignore --fix 'src/**/*.ts'",
    "postbuild": "npm run copy-assets",
    "start": "node build/server",
    "copy-assets": "copyfiles -u 1 src/assets/* build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "celebrate": "^12.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "module-alias": "^2.2.2",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/express": "^4.17.3",
    "@types/hapi__joi": "^16.0.12",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  },
  "_moduleAliases": {
    "@core": "build/core",
    "@sms": "build/sms",
    "@email": "build/email"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datagovsg/postmangovsg.git"
  },
  "bugs": {
    "url": "https://github.com/datagovsg/postmangovsg/issues"
  }
}
